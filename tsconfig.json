{
  "declaration": false,
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "target/classes/static/app",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2019"
    ],
    "types": [
      "node"
    ],
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "app/*": [
        "./src/app/*"
      ]
    },
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/app",
    "src/test/javascript/spec",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}